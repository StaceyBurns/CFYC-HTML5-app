extends layout
block content
    - var videoWatched = ''
    #videoPage(data-role='page')
        div(data-role='header')
            a.ui-btn-left.ui-btn.ui-btn-icon-notext.ui-corner-all.ui-icon-back(href='index.html', data-rel='back')
            h1 #{videoName}
        div(data-role='content')
            div.video-container
                video(id='video1', width='320', height='240', controls='')
                        source(src='http://staceyburns.net/' + video.url + '.mp4')
            div(data-role='collapsible', data-inset='false', data-mini='true')
                h1 More about #{videoName}
                p #{videoText}

        include partials/footer.pug
        script(type='text/javascript', src='https://code.jquery.com/jquery-1.11.2.min.js')
        script(type='text/javascript', src='../javascripts/tracking.js')
            

