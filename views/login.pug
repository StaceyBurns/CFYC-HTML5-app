extends layout


block content
 #login.bg-login(data-role='page' data-theme="a")
        div(data-role='header')
            h1 Log in
        div(data-role='content')
            h1 Please log in
            form.form(method='POST', action='/login')
                p EMAIL
                input(type='text', name='username')
                p PASSWORD
                input(type='password', name='password')
                |
                input(type='submit', value='login')
            p.center Don't have an account?
            a(href='signup')
                p.center Create an account
                |
            p.center Or
            a(href='main') 
                p.center Continue without logging in