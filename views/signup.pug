extends layout


block content
 div.bg-signup(data-role='page' data-theme="a")
        div(data-role='header')
            h1 Sign Up
        div(data-role='content')
            h1 Create an Account
            form.form(method='POST', action='/signup')
                p EMAIL
                input(type='text', name='newUsername')
                p PASSWORD
                input(type='password', name='newPassword')
                | 
                input(type='submit', value='SUBMIT')
            p.center Already have an account?
            a(href='login')
                p.center Login
                |
            p.center Or
            a(href='main') 
                p.center Continue without logging in